<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pavel.voicedo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VoiceDo.NoActionBar">

        <activity android:name=".activities.MainActivity"/>
        <activity android:name=".activities.EventActivity"/>
        <activity android:name=".activities.ListActivity"/>
        <activity android:name=".activities.ListenActivity"/>
        <activity android:name=".activities.TaskActivity"/>
        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>